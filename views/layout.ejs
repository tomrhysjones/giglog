<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= typeof title !== "undefined" ? title : "GiigLog" %></title>

  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>

  <!-- Background video -->
  <div class="bg-video">
    <video autoplay muted loop playsinline>
      <source src="/videos/bg.mp4" type="video/mp4" />
    </video>
  </div>

  <!-- Dark overlay -->
  <div class="bg-overlay"></div>

  <!-- App shell -->
  <div class="app-shell">

    <!-- HEADER -->
    <header class="topbar">
      <div class="topbar_inner container">
        <a class="brand" href="/gigs">GiigLog</a>

        <nav class="nav">
          <a class="nav_link" href="/gigs">Gigs</a>
          <a class="nav_link" href="/gigs/new">Add Gig</a>

          <% if (typeof currentUser !== "undefined" && currentUser) { %>
            <a class="nav_link" href="/signout">Sign Out</a>
          <% } else { %>
            <a class="nav_link" href="/login">Login</a>
          <% } %>
        </nav>
      </div>
    </header>

    <!-- MAIN CONTENT -->
    <main class="page">
      <div class="container">

        <% if (typeof header !== "undefined") { %>
          <h1 class="page-title"><%= header %></h1>
        <% } %>

        <div class="content-card">
          <%- body %>
        </div>

      </div>
    </main>

    <!-- FOOTER -->
    <footer class="footer">
      Â© <%= new Date().getFullYear() %> GiigLog
    </footer>

  </div>

</body>
</html>
